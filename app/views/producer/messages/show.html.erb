<div class="container">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h2><%= @customer.last_name %><%= @customer.first_name %>さんからのお問い合わせ</h2>

            <table class="message table">
              <thead>
                <tr>
                  <th style="text-align: left; font-size: 20px;"><%= @customer.last_name %><%= @customer.first_name %></th>
                  <th style="text-align: right; font-size: 20px;"><%= current_producer.last_name %><%= current_producer.first_name %></th>
                </tr>
              </thead>
              <tbody class="messages">
                <% @messages.each do |message| %>
                  <% if message.producer_id == nil %>
                    <tr>
                      <th>
                        <p style="text-align: left;"><%= message.message %></p>
                      </th>
                      <th></th>
                    </tr>
                  <% else %>
                    <tr>
                      <th></th>
                      <th>
                        <p style="text-align: right;"><%= message.message %></p>
                      </th>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>

            <%= form_with model: [:producer, @message], remote: true do |f| %>
              <%= f.text_field :message %>
              <%= f.hidden_field :room_id, :value => @room.id %>
              <%= f.submit "SEND", class:"btn btn-sm btn-success chat-btn" %>
            <% end %>
        </div>
    </div>
</div>