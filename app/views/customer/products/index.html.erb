<div class="container">
  <div class="row mt-5">
    <div class="col-md-8 offset-md-1">
      <h2>商品一覧</h2>
      <h2>（<%= @products.count %>件）</h2>
      <div class="d-flex align-content-around flex-wrap">
        <% @products.each do |product| %>
          <%= link_to product_path(product), class:"justify-content-center" do %>
            <div class="product-box mr-3">
              <div class="product-image mb-2">
                <%= attachment_image_tag product, :image, :fill, 200, 150, format: 'jpeg' %>
              </div>
              <div class="product-detail">
                <p>
                  <%= product.name %><br>
                  ¥<%= product.tax_excluded_price %><br>
                  <%= product.introduction %>
                </p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <%= paginate @products %>
    </div>    
  </div>
</div>

