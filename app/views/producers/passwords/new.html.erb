<div class="container">
  <div class="row">
    <div class="col-md-12 mt-5"> 
      <h2>パスワードをお忘れですか?</h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "producers/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="actions mt-3">
          <%= f.submit "パスワードの再設定メールを送信する" %>
        </div>
      <% end %>
      
      <%= render "producers/shared/links" %>
    </div>
  </div>
</duv>
