<div class="container">
  <div class="row mt-5">
    <div class="col-md-8 offset-md-1">
      <h2>商品一覧</h2>
      <div class="text-right mb-3">
        <%= link_to new_producer_product_path, class:"btn btn-light shadow-sm rounded-circle p-0 text-center", style:"width:2rem;height:2rem;" do %>
        <p>+</p>
        <% end %>
      </div>
      <table class = "table" >
        <thead>
          <tr>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @products.each do |product| %>
          <tbody>
            <tr>
              <td class = "text-dark"><%=link_to product.name, producer_product_path(product) %></td>
              <td><%= product.tax_excluded_price %>円</td>
              <div>
              <% if product.sales_status == true %>
                <td class="text-success">販売中</td>
              <% elsif product.sales_status == false %>
                <td class="text-muted">売切れ</td>
              <% end %>
              </div>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>