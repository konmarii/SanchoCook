<div class="container">
  <div class="row mt-5">
    <h2>STEP 3 レシピ紹介編集</h2>
    <div class="container-fluid">
      <div class="col-md-12">
        <%= form_with model: [:producer, @recipe], local:true do |f| %>
          <table  class="table table-borderless">
            <tbody>
              <tr>
                <td>レシピ画像</td>
                <div class="d-flex justify-content-md-end">
                  <%= attachment_image_tag @recipe, :image, :fill, 200, 150, format: 'jpeg' %>
                </div>
                <td>
                  <%= f.attachment_field :image, class:"form-control-file" %>
                </td>
              </tr>
              <tr>
                <td>レシピ名</td>
                <td>
                  <%= @recipe.name %>
                </td>
              </tr>
              <tr>
                <td>レシピ紹介</td>
                <td>
                  <%= f.text_area :introduction, placeholder: "ここに紹介文を記述します", class:"form-control" %>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="d-flex justify-content-center">
            <%= f.submit 'レシピ登録完了', class: "btn btn-success"  %>  
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>