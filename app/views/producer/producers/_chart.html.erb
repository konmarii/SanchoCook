<div class="container">
  <div class="row mt-5">
    <div class="col-md-10 offset-md-1">
      <h4>週間売り上げ推移</h4>
      <canvas id="myChart"></canvas>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
      <script>
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
            datasets: [
              {
                label: '週間売り上げ',
                data: [
                  <%= @sales_6days_ago.sum %>,
                  <%= @sales_5days_ago.sum %>,
                  <%= @sales_4days_ago.sum %>,
                  <%= @sales_3days_ago.sum %>,
                  <%= @sales_2days_ago.sum %>,
                  <%= @sales_1day_ago.sum %>,
                  <%= @sales_today.sum %>
                ],
                borderColor: "rgba(0,0,255,1)",
                backgroundColor: "rgba(0,0,0,0)"
              }
            ],
          },
          options: {
            title: {
              display: true,
              text: '週間売り上げ'
            },
            scales: {
              yAxes: [{
                ticks: {
                  suggestedMax: 100000,
                  suggestedMin: 0,
                  stepSize: 10000,
                  callback: function(value, index, values){
                    return  value +  '円'
                  }
                }
              }]
            },
          }
        });
      </script>
    </div>
  </div>
</div>
      
