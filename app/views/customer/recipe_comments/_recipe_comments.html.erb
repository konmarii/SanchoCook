<div id="recipe_comment-<%= recipe.id %>">
  <% recipe.recipe_comments.each do |recipe_comment| %>
    <div class="comment_user">
      <%= recipe_comment.customer.nickname %>:
    </div>
    <%= recipe_comment.comment %>
    <div class="d-flex justify-content-end" %>
        <% if recipe_comment.customer == current_customer %>
            <%= link_to "削除する", recipe_recipe_comment_path(recipe, recipe_comment), class: "btn btn-sm btn-danger", id: "comment_destroy", method: :delete, remote: true %>
        <% end %>
    </div>
  <% end %>
</div>