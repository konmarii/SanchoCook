<div class="container">
  <div class="row mt-5">
    <h2>生産者詳細</h2>
    <div class="container">
        <div class="row">
            <div class"col-md-3"><%= attachment_image_tag @producer, :image, :fill, 200, 200, format: 'jpeg' %></div>
            <div class="col-md-9">
        
              <table class="table table-hover table-inverse">
                <tr>
                  <th>会社名</th>
                  <th><%= @producer.company_name %></th>
                </tr>
                <tr>
                  <th>氏名</th>
                  <th><%= @producer.last_name %><%= @producer.first_name %></th>
                </tr>
                <tr>
                  <th>フリガナ</th>
                  <th><%= @producer.last_name_kana %><%= @producer.first_name_kana %></th>
                </tr>
                <tr>
                  <th>紹介文</th>
                  <th><%= @producer.introduction %></th>
                </tr>
              </table>
            </div>
        </div>
    </div>
    <div class="col-md-10 mt-5">
      <h2>こちらの生産者が出品している商品一覧</h2>
      <%= render 'customer/products/products', products: @products %>
    </div>
  </div>
</div>
