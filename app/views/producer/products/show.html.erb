<div class="container">
  <div class="row mt-5">
    <div class="col-md-10 offset-md-1">
      <h2>商品詳細</h2>
      <div class="row mt-3">
        <div class ="col-sm-12 col-md-6 col-lg-5">
          <%= attachment_image_tag @product, :image, :fill, 250, 200, format: 'jpeg' %>
        </div>
        <div class ="col-sm-12 col-md-6 col-lg-7">
          <table class="table">
            <tr>
              <th>商品名</th>
              <th><%= @product.name %></th>
            </tr>
            <tr>
              <th>商品説明</th>
              <th><%= @product.introduction %></th>
            </tr>
            <tr>
              <th>
                税抜価格<br>
                (税込価格)
              </th>
              <th><%= @product.tax_excluded_price %> (<%= @product.include_tax.round %>)円</th>
            </tr>
            <tr>
              <th class="text-nowrap pr-3">販売ステータス</th>
              <% if @product.sales_status == true %>
                <th class="text-success">販売中</th>
              <% elsif @product.sales_status == false %>
                <th class="text-muted">売切れ</th>
              <% end %>
            </tr>
            <tr>
              <th>お気に入りされた数</th>
              <th><%= @favorites.count %></th>
            </tr>
            <tr>
             <td>
              <%= link_to "編集する", edit_producer_product_path(@product), class: "btn btn-success" %>
             </td>
             <td>
              <%= link_to "削除する", producer_product_path, method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除しますか？"} %>
             </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row mt-5">
        <h2>この商品に紐づくレシピ</h2>
      </div>
      <div class="d-flex justify-content-end">
        <tr>
          <%= link_to "レシピ新規登録はこちら", new_producer_recipe_path, class: "btn btn-info" %>
        </tr>
      </div>
      <div class="row mt-5">
        <div class="d-flex align-content-around flex-wrap">
          <% @recipes.each do |recipe| %>
            <div class="card" style="width: 15rem;">
              <%= attachment_image_tag recipe, :image, :fill, 200, 150, format: 'jpeg' %>
              <div class="card-body">
                <div class="card-title"><%= recipe.name %></div>
                <p class="card-text"><%= recipe.introduction %></p>
                <%= link_to 'レシピ詳細へ', producer_recipe_path(recipe), class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
