<div class="col-md-3">
    <div class="row mt-5">
        <h2>生産者情報</h2>
    </div>
    <div class="row mt-1">
        <%= attachment_image_tag producer, :image, :fill, 90, 100, format: 'jpeg' %>
    </div>
    <div class="row mt-3">
       <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>生産者</th>
              <th><%= producer.last_name %><%= producer.first_name %></th>
            </tr>
            <tr>
              <th>生産者紹介</th>
              <th><%= producer.introduction %></th>
            </tr>
          </tbody>
        </table>  
    </div>
    
    <div class="row d-flex justify-content-center">
      <%= link_to 'お問い合わせはこちら', message_path(producer.id), class: "btn btn-secondary" %>
    </div>
</div>
