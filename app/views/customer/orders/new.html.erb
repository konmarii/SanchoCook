<div class="container">
  <div class="row mt-5">
    <div class="col-md-10 offset-md-1">
      <h2>注文情報入力</h2>
      <%= form_with model: @order, url: orders_confirm_path(@order), method: :post, local: true do |f| %>
        <div class="form-group mt-5">
          <h4>支払い方法</h4>
          <div class="col-md-5 row d-flex justify-content-between">
            <div>
              <%= f.radio_button :payment_method, :credit_card %>
              <%= f.label 'クレジットカード' %>
            </div>
            <div>
              <%= f.radio_button :payment_method, :bank_transfer %>
              <%= f.label '銀行振り込み' %>
            </div>
          </div>
        </div>
        <div class="form-group mt-5">
          <h4>お届け先</h4>
          <%= f.radio_button :address_option, "0" %>
          <%= f.label :order_address, 'ご自身の住所' %><br>
          郵便番号：<%= '    〒' %>
          <%= current_customer.postal_code %><br>
          住所：<%= current_customer.address %><br>
          宛名：<%= current_customer.last_name %><%= current_customer.first_name %><br><br>

          <%= f.radio_button :address_option, "1" %>
          <%= f.label :order_address, '新しいお届け先' %><br>
          <%= f.label '郵便番号' %>
          <%= f.text_field :delivery_postal_code %><br>
          <%= f.label '住所　　' %>
          <%= f.text_field :delivery_address %><br>
          <%= f.label '宛名　　' %>
          <%= f.text_field :delivery_name %><br>
        </div>
        <div class="col text-center">
          <%= f.submit '確認画面へ進む', class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
