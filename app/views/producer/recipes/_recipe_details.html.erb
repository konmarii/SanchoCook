<%= form_with model: [:producer, recipe_detail], local:true do |f| %>
  <table  class="table table-borderless">
    <tbody>
      <tr>
        <td>詳細画像</td>
      </tr>
      <tr>
        <td>
          <%= f.attachment_field :image, class:"form-control-file" %>
        </td>
      </tr>
        
      </tr>
      <tr>
        <td>説明</td>
      </tr>
      <tr>
        <td>
          <%= f.text_area :explanation, placeholder: "説明文", class:"form-control" %>
        </td> 
      </tr>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= f.hidden_field :recipe_id, :value => recipe.id %>
    <%= f.submit '手順を登録', class: "btn btn-success"  %>
  </div>
<% end %>

