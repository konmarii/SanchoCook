<div class="container">
  
  <div class="row mt-5">
    <div class="col-md-10 offset-md-1">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%= link_to "編集する", producer_edit_recipe_detail_path(@recipe), class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
  
  <div class="row mt-5">
    <div><%= attachment_image_tag @recipe, :image, :fill, 200, 150, format: 'jpeg' %></div>
    <div class="col-md-5 offset-md-1">
      <h5>レシピ詳細</h5>

      <table class="table table-hover table-inverse">
        <tr>
          <th>レシピ名</th>
          <th><%= @recipe.name %></th>
        </tr>
        <tr>
          <th>レシピ紹介</th>
          <th><%= @recipe.introduction %></th>
        </tr>
      </table>
    </div>
    <div class="col-md-3">
      <h5>材料</h5>
      <table class="table table-hover table-inverse">
        <% @ingredients.each do |ingredient| %>
          <tr>
            <th><%= ingredient.name %></th>
            <th><%= ingredient.amount %><%= ingredient.unit %></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row mt-5">
    <div class="col-md-12">
      <h5>作り方</h5>
      <div class="d-flex align-content-around flex-wrap">
        <% @recipe_details.each do |recipe_detail| %>
          <div><%= recipe_detail.id %></div>
          <div class="card" style="width: 15rem;">
            <%= attachment_image_tag recipe_detail, :image, :fill, 200, 150, format: 'jpeg' %>
            <div class="card-body">
              <p class="card-text"><%= recipe_detail.id %>. <%= recipe_detail.explanation %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

