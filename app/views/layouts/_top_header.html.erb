<header class="shadow-sm">
  <div id="box">
    <div class="box-text">
      <%= link_to image_tag("LOGO4.PNG", width: 600), "/", class:"navbar-brand p-3" %>
    </div>
    <div id="vegetables">
      <div class="vegetable1"></div>
      <div class="vegetable2"></div>
      <div class="vegetable3"></div>
      <div class="vegetable4"></div>
      <div class="vegetable5"></div>
      <div class="vegetable6"></div>
    </div>
    <%= link_to image_tag("LOGO5.PNG", width: 150), "/", class:"navbar-brand p-3"%>
    <% if customer_signed_in? %>
      <div id="welcome-name">
        ようこそ
        <%= current_customer.last_name %>
        さん
      </div>
    <% end %>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <% if customer_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item active">
                <div class="social">
                  <%= link_to 'マイページ', my_page_path, class: 'nav-link text-dark' %>
                </div>
              </li>
              <li class="nav-item">
                <div class="social">
                  <%= link_to '商品一覧', products_path, class: 'nav-link text-dark' %>
                </div>
              </li>
              <li class="nav-item">
                <div class="social">
                  <%= link_to 'レシピ一覧', recipes_path, class: 'nav-link text-dark' %>
                </div>
              </li>
              <li class="nav-item">
                <div class="social">
                  <%= link_to 'カート', cart_products_path, class: 'nav-link text-dark' %>
                </div>
              </li>
              <li class="nav-item">
                <div class="social">
                  <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' %>
                </div>
              </li>
            </ul>
          <% else %>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'About', about_path, class: 'nav-link text-dark' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to '商品一覧', products_path, class: 'nav-link text-dark' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'レシピ一覧', recipes_path, class: 'nav-link text-dark' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to '新規登録', new_customer_registration_path, class: 'nav-link text-dark' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'ログイン', customer_session_path, class: 'nav-link text-dark' %>
                  </div>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
  </div>
</header>