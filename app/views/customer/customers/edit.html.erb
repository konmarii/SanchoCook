<div class="container">
  <div class="row mt-5">
    <div class="col-md-8 offset-md-1">
      <div class="row">
        <div class="col-lg-8">
          <h2>会員登録情報編集</h2>
          <%= form_with model: @customer, local: true do |f| %>
            <div class="form-group row">
              <div class="col-sm-6">
                <%= f.label :ニックネーム %>
                <%= f.text_field :nickname, class: "form-control" %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-6">
                <%= f.label :姓 %>
                <%= f.text_field :last_name, class: "form-control" %>
              </div>
              <div class="col-sm-6">
                <%= f.label :名 %>
                <%= f.text_field :first_name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-6">
                <%= f.label :カナ姓 %>
                <%= f.text_field :last_name_kana, class: "form-control" %>
              </div>
              <div class="col-sm-6">
                <%= f.label :カナ名 %>
                <%= f.text_field :first_name_kana, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-6">
                <%= f.label :郵便番号 %>
                <%= f.text_field :postal_code, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-6">
                <%= f.label :住所 %>
                <%= f.text_area :address, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-6">
                <%= f.label :電話番号 %>
                <%= f.text_field :phone_number, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-6">
                <%= f.label :メールアドレス %>
                <%= f.email_field :email, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </div>
          <% end %>
          <div class="text-right">
            <%= link_to "退会する", customer_unsubscribe_path(@customer), class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

